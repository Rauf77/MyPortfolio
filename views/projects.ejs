<section id="projects" class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>My Projects</h2>
            <p>Explore some of my featured projects below.</p>
        </div>
    </div>
    <div class="row">
        <!-- Project Cards -->
        <!-- Project Cards -->
<% projects.forEach(function(project) { %>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <!-- Display project image -->
            <img src="<%= project.coverPhoto %>" class="card-img-top" alt="<%= project.title %>">
            <div class="card-body">
                <h5 class="card-title"><%= project.title %></h5>
                
                <a href="/projects/<%= project._id %>" class="btn btn-primary">Learn More</a>
            </div>
        </div>
    </div>
<% }); %>

    </div>
</section>